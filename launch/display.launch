<launch> 

	<arg name="use_xacro" default="false" />

	<arg if="($arg use_xacro)" name="filename" defailt="robot.xacro" />
	<arg unless="($arg use_xacro)" name="filename" defailt="robot.urdf" />

	<arg name="file" default="$(find RobotDesc)/urdf/$(arg filename)" />

	<param if="$(arg use_xacro)" name="robot_description" command="$(findxacro)/xacro.py --inorder $(arg file)" />  
	<param else="$(arg use_xacro)" name="robot_description" textfile="$(arg file)" />

	<node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />

	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find RobotDesc)/config/config.rviz" required="true" />

</launch>