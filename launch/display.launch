<launch> 

	<arg name="use_xacro" default="0" />
	<arg name="use_gui" default="0" />


	<arg if="$(arg use_xacro)" name="filename" default="robot.xacro" />
	<arg unless="$(arg use_xacro)" name="filename" default="robot.urdf" />

	<arg name="file" default="$(find RobotDesc)/urdf/$(arg filename)" />

	<param if="$(arg use_xacro)" name="robot_description" command="$(find xacro)/xacro.py --inorder $(arg file)" />  
	<param unless="$(arg use_xacro)" name="robot_description" textfile="$(arg file)" />

	<node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />

	<param if="$(arg use_gui)" name="/use_gui" value="true" />  
	<node if="$(arg use_gui)" name="joint_state_publisher" type="joint_state_publisher" pkg="joint_state_publisher" />

	<node pkg="tf2_ros" type="static_transform_publisher" name="static_transform_publisher_left" args="0 0.365 0.2 -1.57 0 0 wheel_left base" />
	<node pkg="tf2_ros" type="static_transform_publisher" name="static_transform_publisher_right" args="0 -0.365 0.2 -1.57 0 0 wheel_right base" />
	<node pkg="tf2_ros" type="static_transform_publisher" name="static_transform_publisher_center" args="0 -0.365 0.2 -1.57 0 0 wheel_center base" />

	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find RobotDesc)/config/config.rviz" required="true" />

	

</launch>